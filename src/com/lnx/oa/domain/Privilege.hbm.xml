<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping>
 	<class name="com.lnx.oa.domain.Privilege" table="_privilege">
	 	<id name="id">
	 	<generator class="native"></generator>
	 	</id>
	 	<property name="name" length="35"></property>
	 	<property name="url"></property>
	 	
	 	<!-- 下级权限和上级权限的多对一关系 -->
	 	<many-to-one name="parent" class="com.lnx.oa.domain.Privilege" column="parentId"></many-to-one>
	 	
	 	<!-- 上级权限和下级权限一对多关系  -->
	 	<set name="children" order-by="id" lazy="false">
	 		<key column="parentId"></key>
	 		<one-to-many class="com.lnx.oa.domain.Privilege" />
	 	</set>
	 	
	 	<!-- 权限和角色的多对多关系 -->
	 	<set name="roles" table="_role_privilege">
	 		<key column="privilegeId"></key>
	 		<many-to-many class="com.lnx.oa.domain.Role" column="roleId"></many-to-many>
	 	</set>
 	</class>
 	
 </hibernate-mapping>
 